{
  "manifest_version": 3,
  "name": "My Extension",
  "version": "1.0.0",

  "action": {
    "default_popup": "index.html"
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content-script.js"]
    }
  ],

  "permissions": ["storage", "tabs"]
}
